{
  "name": "spiral/sentry-bridge",
  "type": "library",
  "description": "Sentry Exception Handler for Spiral",
  "license": "MIT",
  "authors": [
    {
      "name": "Anton Titov / Wolfy-J",
      "email": "wolfy.jd@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.1",
    "spiral/boot": "^3.0",
    "spiral/snapshots": "^3.0",
    "sentry/sentry": "^3.1",
    "php-http/curl-client": "^2.3.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5.5",
    "mockery/mockery": "^1.5",
    "vimeo/psalm": "^5.17",
    "psr/log": "^3.0",
    "spiral/testing": "^2.2"
  },
  "autoload": {
    "psr-4": {
      "Spiral\\Sentry\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Spiral\\Tests\\": "tests/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
